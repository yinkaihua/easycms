 	<update id="updateBak" parameterType="com.coding17.easycms.soa.entity.content.TContent" >
		UPDATE   T_CONTENT  	 
	  	<set> 
			 		`TITLE` = #{title,jdbcType=VARCHAR},
			 		`CREATE_TIME` = #{createTime,jdbcType=TIMESTAMP},
			 		`PUB_STATE` = #{pubState,jdbcType=INTEGER},
